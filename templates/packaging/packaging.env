# Packaging metadata for script-helpers
# Use | as a list separator for dependencies to preserve spaces in entries.

APP_NAME="myapp"
APP_BIN_NAME="myapp"
APP_TITLE="My App"
APP_VERSION="0.1.0"
APP_DESCRIPTION="Short description of the app."
APP_DESCRIPTION_LONG="Longer description of the app for package metadata."
APP_HOMEPAGE="https://example.com/myapp"
APP_LICENSE="MIT"
APP_VENDOR="Example Org"

# Build/install commands should honor DESTDIR and PREFIX when possible.
APP_INSTALL_PREFIX="/usr"
APP_BUILD_CMD="make"
APP_INSTALL_CMD="make install"

MAINTAINER_NAME="Your Name"
MAINTAINER_EMAIL="you@example.com"

# Optional repo slug for GitHub source URLs (owner/repo)
SOURCE_REPO="owner/repo"

# Debian metadata
DEB_SECTION="utils"
DEB_PRIORITY="optional"
DEB_SERIES="jammy"
DEB_ARCH="any"
DEB_BUILD_DEPENDS="debhelper-compat (= 13)|build-essential"
DEB_DEPENDS="ca-certificates"
DEB_RECOMMENDS=""
DEB_SUGGESTS=""

# RPM metadata
RPM_RELEASE="1%{?dist}"
RPM_BUILD_REQUIRES="gcc|make"
RPM_REQUIRES="ca-certificates"
RPM_FILES="/usr/bin/${APP_BIN_NAME}"

# Arch metadata
ARCH_PKGREL="1"
ARCH_ARCH="x86_64"
ARCH_DEPENDS="ca-certificates"
ARCH_MAKEDEPENDS="git"
ARCH_SOURCE_URL="https://github.com/${SOURCE_REPO}/archive/refs/tags/v${APP_VERSION}.tar.gz"
ARCH_SOURCE_SHA256="SKIP"

# Homebrew metadata
BREW_FORMULA_NAME="myapp"
BREW_FORMULA_CLASS="Myapp"
BREW_DESC="Short description for Homebrew."
BREW_HOMEPAGE="https://example.com/myapp"
BREW_URL="https://github.com/${SOURCE_REPO}/archive/refs/tags/v${APP_VERSION}.tar.gz"
BREW_SHA256="REPLACE_WITH_SHA256"
BREW_LICENSE="MIT"
BREW_DEPENDS=""
BREW_INSTALL_CMD='system "make", "install", "PREFIX=#{prefix}"'
BREW_TEST_CMD='system "#{bin}/myapp", "--version"'
